mixin issue(n)
  | &nbsp;
  a(href=repoURL + '/issues/' + n)= '#' + n


mixin do_release(r, release, mode)
  - var url = 'http://camotics.org/releases/' + release + '/' + mode;
  - url += '/camotics/' + r[2] + '/v1.1/' + r[3];
  .release(title='Download CAMotics for ' + r[0])
    each img in r[1]
      img(src='images/' + img, alt=r[0])
    h1= r[0]
    a(title='Download CAMotics for ' + r[0], href=url)= r[3]


mixin do_releases(rs, release, mode)
  each r in rs
    +do_release(r, release, mode)
